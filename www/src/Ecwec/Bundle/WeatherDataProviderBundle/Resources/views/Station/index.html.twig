{% extends 'CoreBundle::layout.html.twig' %}

{% block title %}Stations{% endblock %}
{% block content -%}
    <a class="btn btn-primary" href="{{ path('station_new') }}">New</a>
    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Object ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('station_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.objectId }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-info" href="{{ path('station_show', { 'id': entity.id }) }}">show</a>
                        <a class="btn btn-primary" href="{{ path('station_edit', { 'id': entity.id }) }}">edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
